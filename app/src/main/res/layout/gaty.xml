<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.foxmail.aroundme.bannertest.GAty">

    <com.foxmail.aroundme.banner.viewpager.BannerViewPager
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:intervalDuration="4000"
        app:indicatorMargin="10dp"
        app:indicatorPosition="centerTop"
        app:indicatorShape="oval"
        app:indicatorSpace="3dp"
        app:isAutoPlay="true"
        app:scrollDuration="3000"
        app:selectedIndicatorColor="#ffffff"
        app:selectedIndicatorHeight="6dp"
        app:selectedIndicatorWidth="6dp"
        app:unSelectedIndicatorColor="#cccccc"
        app:unSelectedIndicatorHeight="6dp"
        app:unSelectedIndicatorWidth="6dp"/>
</LinearLayout>
